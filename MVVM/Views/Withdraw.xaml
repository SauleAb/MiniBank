<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniBank.MVVM.Views.Withdraw"
             Title="Withdraw">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Withdraw"
                   FontSize="Large"
                   HorizontalOptions="Center"/>

            <Entry  x:Name="WithdrawAmount"
                    Placeholder="Amount"
                    Keyboard="Numeric"/>
            
            <Button
                x:Name="WithdrawBtn"
                Text="Withdraw"
                Clicked="WithdrawBtn_Clicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>