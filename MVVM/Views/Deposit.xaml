<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniBank.MVVM.Views.Deposit"
             Title="Deposit">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Deposit"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Entry  x:Name="depositAmount"
                    Placeholder="Amount"
                    Keyboard="Numeric"/>

            <Button
                x:Name="DepositBtn"
                Text="Deposit"
                Clicked="DepositBtn_Clicked"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>